{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/lib", "**/__tests__"]
}
